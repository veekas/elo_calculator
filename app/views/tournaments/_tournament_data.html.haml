- if tournaments.present?
  %table{width: '100%'}
    %thead
      %tr
        %th
          Name
        %th
          End Date
        %th
          Entries
      - tournaments.each do |tournament|
        %tr
          %td
            = link_to tournament.name, tournament
          %td
            = tournament.end_date.strftime("%m/%d/%y")
          %td
            = tournament.players.count
- else
  No Currently Active Tournaments
