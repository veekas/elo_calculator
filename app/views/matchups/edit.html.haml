.row
  .small-12.large-12.columns
    %h3.text-center
      - if @matchup.tournament
        = @matchup.tournament.name
      - else
        = "#{@matchup.primary.name}(#{@matchup.primary.rating}) vs #{@matchup.secondary.name}(#{@matchup.secondary.rating})"
.row
  .small-12.large-12.columns
    %h4.text-center
      Please mark winner of each game in order. Best of #{@matchup.series_max}
.row
  .small-12.large-12.columns
    = render 'matchup_form', matchup: @matchup
